{
  "version": "1.0.0",
  "title": "Losing the ability to talk to the internal services should be adjusted for",
  "description": "In case we lose connection to our internal services, our front service ought to degrade gracefully",
  "configuration": {
    "front_url": {
      "type": "env",
      "key": "FRONT_URL",
      "default": "http://localhost:30080/"
    }
  },
  "steady-state-hypothesis": {
    "title": "n/a",
    "probes": [
      {
        "type": "probe",
        "name": "front-service-must-be-ok",
        "tolerance": 200,
        "provider": {
          "type": "http",
          "url": "${front_url}"
        }
      },
      {
        "type": "probe",
        "name": "front-service-does-not-return-an-error",
        "tolerance": {
          "type": "jsonpath",
          "target": "body",
          "path": "$.error",
          "count": 0
        },
        "provider": {
          "type": "http",
          "url": "${front_url}"
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "simulate-some-traffic",
      "background": true,
      "provider": {
        "type": "process",
        "path": "vegeta",
        "arguments": "attack -targets=experiments/data/stricter_network_policy.txt -workers=1 -rate=2 -timeout=3s -duration=10s -output=experiments/data/stricter_network_policy.bin"
      }
    },
    {
      "type": "action",
      "name": "deny-all-ingress-traffic",
      "pauses": {
        "before": 5,
        "after": 5
      },
      "provider": {
        "type": "python",
        "module": "chaosk8s.networking.actions",
        "func": "deny_all_ingress",
        "arguments": {
          "label_selectors": {
            "app": "back"
          }
        }
      }
    },
    {
      "type": "action",
      "name": "plot-traffic",
      "provider": {
        "type": "process",
        "path": "vegeta",
        "arguments": "plot experiments/data/stricter_network_policy.bin > experiments/data/stricter_network_policy.html"
      }
    },
    {
      "type": "probe",
      "name": "fetch-application-logs",
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.probes",
        "func": "read_pod_logs",
        "arguments": {
          "label_selector": "app=front",
          "container_name": "front",
          "last": "10s"
        }
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "remove-deny-all-ingress-traffic",
      "provider": {
        "type": "python",
        "module": "chaosk8s.networking.actions",
        "func": "remove_deny_all_ingress"
      }
    }
  ]
}
